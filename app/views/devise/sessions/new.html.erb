<h2>登入</h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" },
                label: '密碼' %>
    <%= f.input :remember_me, label: '記住我', as: :boolean if devise_mapping.rememberable? %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, '登入', class: 'btn-primary' %>
  </div>
<% end %>
<div class="mt-2">
  or <%= link_to '註冊', new_user_registration_path, class: 'btn btn-outline-primary' %>
</div>
